<h1><%= @tag.description %></h1>


<h3>Recipes tagged with <%= @tag.description %></h3>
<ul>
  <% @recipes.each do |recipe| %>
    <li><a href= "/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>

<button><a href="/tags/<%= @tag.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete Tag</a></button>



<button><a href="/tags">Main Page</a></button>
